{
  "name": "@uniswap/spec-workflow-mcp",
  "version": "0.2.5",
  "description": "MCP server for spec-driven development workflow with real-time web dashboard",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "spec-workflow-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && tsc && npm run build:dashboard && npm run copy-static",
    "copy-static": "node scripts/copy-static.cjs",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "dashboard:dev": "node scripts/dev-dashboard.mjs",
    "dashboard:prod": "npm run build; node dist/index.js . --AutoStartDashboard --port 49743",
    "dashboard:prod:run-only": "node dist/index.js . --AutoStartDashboard --port 49743",
    "build:dashboard": "vite build --config src/dashboard_frontend/vite.config.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "typecheck": "npx tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "spec-workflow",
    "ai-development",
    "claude",
    "cursor",
    "development-workflow",
    "project-management"
  ],
  "author": "",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/uniswap/spec-workflow-mcp.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^8.2.1",
    "@floating-ui/react": "^0.26.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chokidar": "^3.5.3",
    "clsx": "^2.1.1",
    "fastify": "^4.24.3",
    "highlight.js": "^11.9.0",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.4.1",
    "open": "^8.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.3"
  }
}
